<link rel="stylesheet" href="/static/style.css">

<header class="main-header">
    <div class="header-left">Edit Photo</div>
    <div class="header-center">
        <form class="search-form" action="/search" method="GET">
            <input type="text" name="q" placeholder="Search photos..." />
            <button type="submit">Search</button>
        </form>
    </div>
    <div class="header-right">
        <a href="/" class="header-btn">Home</a>
        <a href="/notifications" class="header-btn">Notifications</a>
        <a href="/logout" class="header-btn">Logout</a>
    </div>
</header>

<main class="content-container">

    <form method="POST" class="edit-form">
        <input name="id" value="{{photo.id}}" type="hidden">

        <label>Title</label>
        <input name="title" value="{{photo.title}}" required>

        <label>Description</label>
        <textarea name="description" rows="3">{{photo.description}}</textarea>

        <label>Visibility</label>
        <select name="visibility">
            <option value="private" {{photo.selectPrivate}}>Private</option>
            <option value="public" {{photo.selectPublic}}>Public</option>
        </select>

        <button type="submit" class="btn-primary">Save Changes</button>
    </form>

</main>
