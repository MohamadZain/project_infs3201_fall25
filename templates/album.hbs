<link rel="stylesheet" href="/static/style.css">

<h1>Photos in {{album.name}} ({{count}} photos)</h1>

<a href="/album/{{album.id}}/upload" class="upload-link">Upload Photo</a>

<div class="album-grid">
    {{#each photos}}
    <div class="photo-card">
        <a href="/photo-details/{{id}}">
            <img src="/photos/{{filename}}" alt="{{title}}" />
        </a>
        <p>{{title}}</p>
        {{#if tags}}
        <div style="font-size: 12px; color: #666;">
            Tags: 
            {{#each tags}}
                <span style="background-color: #e0e0e0; padding: 2px 6px; margin: 1px; border-radius: 3px; display: inline-block;">{{this}}</span>
            {{/each}}
        </div>
        {{/if}}
    </div>
    {{/each}}
</div>

<a class="back-link" href="/">Back to Home</a>