<link rel="stylesheet" href="/static/style.css">

<h1>Upload Photo to {{album.name}}</h1>

{{#if error}}
<p style="color:red">{{error}}</p>
{{/if}}

<form method="POST" action="/album/{{album.id}}/upload" enctype="multipart/form-data">
    <label>Select Photo:</label><br>
    <input type="file" name="photo" accept="image/*" required><br><br>
    
    <label>Title:</label><br>
    <input type="text" name="title" placeholder="Enter photo title"><br><br>
    
    <label>Description:</label><br>
    <textarea name="description" rows="4" cols="50" placeholder="Enter photo description"></textarea><br><br>
    
    <label>Tags (separate with commas):</label><br>
    <input type="text" name="tags" placeholder="e.g. nature, sunset, beach"><br><br>
    
    <label>Visibility:</label><br>
    <select name="visibility">
        <option value="private" selected>Private</option>
        <option value="public">Public</option>
    </select><br><br>
    
    <button type="submit">Upload Photo</button>
</form>

<br>
<a href="/album/{{album.id}}">Back to Album</a>