<link rel="stylesheet" href="/static/style.css">

<header class="main-header">
    <div class="header-left">
        Upload Photo to {{album.name}}
    </div>
    <div class="header-center">
        <form class="search-form" action="/search" method="GET">
            <input type="text" name="q" placeholder="Search photos..." />
            <button type="submit">Search</button>
        </form>
    </div>
    <div class="header-right">
        <a href="/" class="header-btn">Home</a>
        <a href="/notifications" class="header-btn">Notifications</a>
        <a href="/logout" class="header-btn">Logout</a>
    </div>
</header>

<main class="content-container">
    {{#if error}}
    <p class="error-message">{{error}}</p>
    {{/if}}

    <form class="upload-form" method="POST" action="/album/{{album.id}}/upload" enctype="multipart/form-data">
        <label>Select Photo:</label>
        <input type="file" name="photo" accept="image/*" required>

        <label>Title:</label>
        <input type="text" name="title" placeholder="Enter photo title">

        <label>Description:</label>
        <textarea name="description" rows="4" placeholder="Enter photo description"></textarea>

        <label>Tags (separate with commas):</label>
        <input type="text" name="tags" placeholder="e.g. nature, sunset, beach">

        <label>Visibility:</label>
        <select name="visibility">
            <option value="private" selected>Private</option>
            <option value="public">Public</option>
        </select>

        <button type="submit" class="btn-primary">Upload Photo</button>
    </form>
</main>
