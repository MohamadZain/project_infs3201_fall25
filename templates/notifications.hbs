<link rel="stylesheet" href="/static/style.css">

<header class="main-header">
    <div class="header-left">Notifications</div>

    <div class="header-center">
        <form class="search-form" action="/search" method="GET">
            <input type="text" name="q" placeholder="Search photos..." />
            <button type="submit">Search</button>
        </form>
    </div>

    <div class="header-right">
        <a href="/" class="header-btn">Home</a>
        <a href="/logout" class="header-btn">Logout</a>
    </div>
</header>

<main class="content-container">

    <div class="notifications-box">

        <h2>Your Notifications</h2>

        {{#if notifications.length}}
            <ul class="notification-list">
                {{#each notifications}}
                <li class="notification-item">
                    <div class="notif-message"><strong>{{this.subject}}</strong>: {{this.body}}</div>
                    <div class="notif-date">{{this.date}}</div>
                </li>
                {{/each}}
            </ul>
        {{else}}
            <p class="no-notifs">You have no notifications.</p>
        {{/if}}

    </div>

</main>
